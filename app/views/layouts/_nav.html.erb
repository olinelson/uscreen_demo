<div class="navbar bg-base-100 shadow-sm h-16">
  <div class="navbar-start">
  </div>
  <div class="navbar-center">
    <%= link_to root_path, class: "btn btn-ghost sm:text-lg"  do %>
      <%= icon "device-tv", class: "text-accent" %>
      PetitScreen
    <% end %>
  </div>
  <div class="navbar-end">
    <% if authenticated? %>
      <%= render "shared/dropdown", icon: "user-circle", direction: "end" do %>
        <li>
          <%= link_to "My stuff", Current.user %>
        </li>
        <li>
          <%= button_to "Log out", session_path, method: :delete, class: "cursor-pointer" %>
        </li>
      <% end %>
    <% else %>
      <%= link_to "Get Started", new_registration_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
