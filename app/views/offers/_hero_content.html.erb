<%# locals: (offer:) %>
<div class="hero-content flex flex-col lg:flex-row">
  <% first = offer.videos.first %>
  <% if first && first.file.attached? %>
    <img
      class="w-sm rounded aspect-video object-cover shadow-2xl"
      src="<%= polymorphic_url(offer.videos.first.file.preview(resize_to_limit: [1280, 720]))%>"
      alt="<%= offer.videos.first.title %>"
    />
  <% else %>
    <div class="aspect-video bg-base-300 max-w-sm w-sm h-full"></div>
  <% end %>
  <div>
    <h1 class="text-5xl font-bold"><%= offer.title %></h1>
    <p class="py-6 max-w-sm">
      <%= offer.subtitle %>

    </p>
    <% if offer.videos.any? %>
      <%= link_to "Get Started", offer.videos.first, class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>
<div class="p-4">
  <div class="card mx-auto w-full max-w-3xl bg-base-100 card-md shadow-sm">
    <div class="card-body">
      <%= offer.description %>
    </div>
  </div>
</div>
