<% content_for :title, @offer.title %>
<div class="hero bg-base-200 min-h-screen relative">
  <div>
    <div class="hero-content flex flex-col lg:flex-row">
      <% if @offer.videos.any? %>
        <img
          class="max-w-sm rounded aspect-video object-cover shadow-2xl"
          src="<%= polymorphic_url(@offer.videos.first.file.preview(resize_to_limit: [1280, 720]))%>"
          alt="<%= @offer.videos.first.title %>"
        />
      <% end %>
      <div>
        <h1 class="text-5xl font-bold"><%= @offer.title %></h1>
        <p class="py-6 max-w-sm">
          <%= @offer.subtitle %>

        </p>
        <% if @offer.videos.any? %>
          <%= link_to "Get Started", @offer.videos.first, class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>
    <div class="p-4">
      <div class="card w-full max-w-3xl bg-base-100 card-md shadow-sm">
        <div class="card-body">
          <%= @offer.description %>
        </div>
      </div>
    </div>

  </div>

  <div class="absolute top-4 right-4">
    <%= render "shared/dropdown", icon: "dots", square: true, direction: "end" do %>
      <li>
        <%= link_to "Edit this offer", edit_offer_path(@offer) %>
      </li>
      <li>
        <%= button_to "Delete offer",
        @offer,
        method: :delete,
        data: {
          turbo_confirm: "Are you sure?:Deleting an offer can't be undone.",
        } %>
      </li>
    <% end %>
  </div>

</div>
