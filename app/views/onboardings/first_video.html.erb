<div class="container mx-auto p-4">

  <%= render "steps", steps: @steps, current: "first_video" %>
  <h1 class="text-3xl font-semibold pt-4 pb-2">First Video</h1>
  <p class="pb-6">Upload your first video and take the first step toward monetizing your
    content online.</p>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <%= turbo_frame_tag "video_form",
      src: new_video_path({ return_to: onboarding_path }) %>
    </div>
  </div>
</div>
