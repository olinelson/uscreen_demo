<div class="container mx-auto p-4">
  <h1 class="text-4xl font-semibold">My Account</h1>
  <div class="divider"></div>

  <h4 class="text-2xl pb-2">Videos</h4>
  <div class="pb-4">
    <%= render @user.videos %>
    <div class="only:block hidden">
      <%= render "videos/video_placeholder" %>
    </div>
  </div>

  <h4 class="text-2xl pb-2">Offers</h4>
  <div class="pb-4">
    <%= render @user.offers %>
    <div class="only:block hidden">
      <%= render "offers/offer_placeholder" %>
    </div>
  </div>

  <div class="divider">More</div>

  <%= button_to "Log out", session_path, method: :delete, class: "btn btn-warning" %>
</div>
