<div class="container mx-auto p-4">
  <h1 class="text-4xl font-semibold">My Account</h1>
  <div class="divider"></div>

  <h4 class="text-2xl pb-2">Videos</h4>
  <div class="pb-4 flex flex-wrap gap-4">
    <%= render @user.videos %>
    <div class="only:block hidden">
      <%= render "videos/video_placeholder" %>
    </div>
  </div>

  <h4 class="text-2xl pb-2">Offers</h4>
  <div class="flex gap-4 flex-wrap">
    <%= render @user.offers %>
    <div class="only:block hidden">
      <%= render "offers/offer_placeholder" %>
    </div>
  </div>
</div>
