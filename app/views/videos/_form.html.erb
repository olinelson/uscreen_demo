<%= form_with(model: video, class: "contents", data: {controller: "form" }) do |form| %>
  <%= render "shared/form_errors", errors: video.errors if video.errors.any? %>

  <fieldset>
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>

    <%= form.label :file %>
    <%= form.file_field :file %>

    <%= form.label :description %>
    <%= render "shared/expanding_rich_text",
    form:,
    name: "description",
    id: "video_description_input",
    default_view: "detail" %>

    <%= form.hidden_field :user_id, value: Current.user.id %>
  </fieldset>

  <div class="mt-4">
    <%= form.submit %>
  </div>
<% end %>
