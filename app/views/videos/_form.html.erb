<%= form_with(model: video, class: "contents", data: {controller: "form", turbo_frame: "_top" }) do |form| %>
  <%= render "shared/form_errors", errors: video.errors if video.errors.any? %>

  <fieldset>
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>

    <%= form.label :file %>
    <%= turbo_mount(
      "Dropzone",
      props: {
        url: rails_direct_uploads_url,
        name: "video[file]",
        accept: "video/*",
        acceptDescription: "Only video files are permitted.",
        icon: "#{icon("download")}",
      },
    ) %>

    <%= form.label :description %>
    <%= render "shared/expanding_rich_text",
    form:,
    name: "description",
    id: "video_description_input",
    default_view: "detail" %>

    <%= form.hidden_field :user_id, value: Current.user.id %>
  </fieldset>

  <div class="mt-4">
    <%= form.submit %>
  </div>
<% end %>
