<% content_for :title, "New video" %>

<% if @in_modal %>
  <h3 class="text-lg font-bold pb-4">New video</h3>
  <%= render "form", video: @video %>
<% else %>
  <div class="container mx-auto p-4">
    <h1 class="text-4xl font-semibold pb-4">New video</h1>
    <%= turbo_frame_tag "video_form" do %>
      <%= render "form", video: @video, return_to: @return_to %>
    <% end %>
  </div>
<% end %>
